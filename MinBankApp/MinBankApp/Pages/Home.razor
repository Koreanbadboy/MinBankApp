@page "/"

<PageTitle>Home</PageTitle>

@if (!loggedIn)
{
    <h1>Välkommen till MinBankApp!</h1>
    <div class="mb-3">
        <label for="accessCode">Skriv kod för att komma in:</label>
        <InputText id="accessCode" @bind-Value="inputCode" type="password" />
    </div>
    <button class="btn btn-primary" @onclick="CheckCode">Logga in</button>
    @if (showError)
    {
        <div class="text-danger mt-2">Fel kod, försök igen!</div>
    }
}
else
{
    <h1>Du är inloggad!</h1>
    <NavMenu />
    <!-- lägg till resten av innehållet eller navigering -->
}

<footer class="footer">
    <p>© 2025 MinBankApp. All rights reserved.</p>
</footer>

@code {
    private string inputCode = string.Empty;
    private bool loggedIn = false;
    private bool showError = false;
    private const string CorrectCode = "1337"; // Ändra till önskad kod

    private void CheckCode()
    {
        if (inputCode.Trim() == CorrectCode)
        {
            loggedIn = true;
            showError = false;
        }
        else
        {
            showError = true;
        }
    }
}
